@using OnlineShop.Models
@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Index";
}
<br/><br/>

<div class="row">
    <div class="col-md-6">
        <h2 class="text-info">Tag List</h2>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-info"  asp-action="Create"><i class="fas fa-plus-circle"></i> New Tag</a>
    </div>
</div>

<br/>
<div>
    <table class="table table-striped border table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td> <partial name="_ButtonsPartial" model="item.Id"/></td>
            </tr>
        }
    </table>
</div>

